.header

.submenu .service-list
  padding: 0
  margin: 0
  width: 100%
  height: 100%
  list-style-type: none

.submenu .service-list .service-item
  padding: 0 10px 0 10px
  height: 60px
  display: flex
  align-items: center
  overflow hidden
  cursor: pointer

.submenu .service-list .service-item:hover
  background: #edf4ff

.submenu .service-list .service-item:hover .service-name
  color: #799fb2

.submenu .service-list .service-item .service-name
  font-family: 'Ubuntu', sans-serif
  font-size: 16px
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #34495e